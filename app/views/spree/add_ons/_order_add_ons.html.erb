<% if item.variant.product.add_on? %>
  <%= render 'spree/add_ons/add_on_description_modal', add_on: item.add_ons.first %>
<% else %>
  <div>
    <% item.line_item_add_ons.each do |line_item_add_on| %>
      <div>
        + <strong><%= line_item_add_on.money %></strong> <%= line_item_add_on.add_on.display_name %>
        <%= render 'spree/add_ons/add_on_description_modal', add_on: line_item_add_on.add_on %>
      </div>
    <% end %>
  </div>
<% end %>

